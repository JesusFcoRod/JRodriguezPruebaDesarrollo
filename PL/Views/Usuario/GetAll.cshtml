@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Usuarios Registrados</h1>

<div style="float:right">
    @Html.ActionLink("Agregar", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })
</div>

<br />
<br />
<br />

<table class="table table-hover table-striped table-bordered table-responsive">
    <thead>
        <tr class="table-secundary">
            <td style="text-align:center">Editar</td>
            <td style="display:none">id</td>
            <td style="text-align:center">Nombre Usuario</td>
            <td style="text-align:center">UserName</td>
            <td style="text-align:center">Password</td>
            <td style="text-align:center">Fecha de Nacimiento</td>
            <td style="text-align:center">Rol</td>
            <td style="text-align:center">Eliminar</td>
        </tr>
    </thead>

    <tbody>
        @foreach (ML.Usuario usuario in Model.Usuarios)
        {
            <tr>
                <td style="text-align:center; vertical-align:middle;"><a class=" btn btn-warning" href="@Url.Action("Form", "Usuario", new {idUsuario = usuario.IdUsuario})"></a></td>
                <td style="display:none">@usuario.IdUsuario</td>
                <td style="text-align:center">@usuario.NombreCompleto</td>
                <td style="text-align:center">@usuario.UserName</td>
                <td style="text-align:center">@usuario.Password</td>
                <td style="text-align:center">@usuario.FechNacimiento</td>
                <td style="text-align:center">@usuario.Rol.NombreRol</td>
                <td style="text-align:center; vertical-align:middle;"><a class=" btn btn-danger" href="@Url.Action("Delete", "Usuario", new {idUsuario = usuario.IdUsuario})"></a></td>
            </tr>

        }
    </tbody>

</table>


