@model ML.Rol
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Roles Registrados</h1>

<div style="float:right">
    @Html.ActionLink("Agregar", "Form", "Rol", htmlAttributes: new { @class = "btn btn-success" })
</div>

<br />
<br />
<br />

<table class="table table-hover table-striped table-bordered table-responsive">
    <thead>
        <tr class="table-secundary">
            <td style="text-align:center">Editar</td>
            <td style="display:none">id</td>
            <td style="text-align:center">Nombre Rol</td>
            <td style="text-align:center">Eliminar</td>
        </tr>
    </thead>

    <tbody>
        @foreach (ML.Rol rol in Model.Roles)
        {
            <tr>
                <td style="text-align:center; vertical-align:middle;"><a class=" btn btn-warning" href="@Url.Action("Form", "Rol", new {idRol = rol.IdRol})"></a></td>
                <td style="display:none">@rol.IdRol</td>
                <td style="text-align:center">@rol.NombreRol</td>
                <td style="text-align:center; vertical-align:middle;"><a class=" btn btn-danger" href="@Url.Action("Delete", "Rol", new {idRol = rol.IdRol})"></a></td>
            </tr>

        }
    </tbody>

</table>


